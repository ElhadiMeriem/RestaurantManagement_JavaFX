<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController" fx:id="root">
    <children>
        <Label prefHeight="500.0" prefWidth="376.0" style="-fx-background-color: #b71c1c;" textFill="#460101"/>
        <ImageView fitHeight="241.0" fitWidth="241.0" layoutX="45.0" layoutY="112.0" pickOnBounds="true"
                   preserveRatio="true" x="5.0" y="5.0">
            <image>
                <Image url="@../images/logo.png"/>
            </image>
        </ImageView>
        <TextField fx:id="txtEmail" layoutX="459.0" layoutY="100.0" prefHeight="36.0" prefWidth="204.0"
                   promptText="Email"/>
        <PasswordField fx:id="txtPassword" layoutX="459.0" layoutY="170.0" prefHeight="36.0" prefWidth="204.0"
                       promptText="Password"/>
        <ComboBox fx:id="comboRole" layoutX="459.0" layoutY="240.0" prefHeight="36.0" prefWidth="204.0" promptText="Role" />
        <Button fx:id="btnLogin" layoutX="518.0" layoutY="309.0" mnemonicParsing="false" prefHeight="30.0"
                prefWidth="86.0" style="-fx-background-color: #b71c1c;" styleClass="btnGreen" text="Sign In"
                textFill="WHITE" onAction="#loginAction">
            <font>
                <Font name="Comic Sans MS" size="14.0"/>
            </font>
        </Button>
        <Button fx:id="btnSignUp" layoutX="611.0" layoutY="404.0" mnemonicParsing="false" prefHeight="36.0" prefWidth="66.0"
                style="-fx-background-color: #b71c1c;" text="Sign Up" textFill="WHITE" onAction="#signUpAction">
            <font>
                <Font name="Comic Sans MS" size="13.0"/>
            </font>
        </Button>
        <Label layoutX="485.0" layoutY="413.0" prefHeight="19.0" prefWidth="119.0" text="Not a client yet? ">
            <font>
                <Font name="Consolas" size="12.0"/>
            </font>
        </Label>
    </children>
</AnchorPane>
